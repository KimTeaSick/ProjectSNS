
{
    "parser": "babel-eslint",
    "parserOption": {
        "ecmaVersion"  : 2020,
        "sourceType"   : "module",
        "ecmaFeatures" : {
            "jsx" : true
        }
    },
    "env" : {
        "browser" : true,
        "node"    : true,
        "es6"     : true
    },
    "extends" : [
        "airbnb"
    ],
    "plugin" : [
        "import",
        "react-hooks"
    ],
    "rules" : {
        "np-usderscore-dangle": "off",
        "react/forbin-prop-types" : 0,
        "object-curly-newline" : 0,
        "jsx-a11y/label-has-associated-control":"off",
        "jsx-a11y/anchor-is-valid": "off",
        "no-console" : "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-one-expression-per-line": "off",
        "linebreake-style" : "off"
    }
}